
# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# list things
alias ll='ls -AhlFN --color=auto --group-directories-first'
alias cll='clear && ls -AhlFN --color=auto --group-directories-first'
alias wl='watch ls -AhlFN --color=auto --group-directories-first'
alias ls='ls -AhNF --color=auto --group-directories-first'
alias ld='ls -d */ --color=auto'
alias lt='tree -al'

# pacman/yay
alias yi='yay -S'
alias ys='yay -Ss'
alias yr='yay -Rs'


# Music
alias play='mpsyt playurl'
alias ts='tagutil'
alias te='tagutil edit'
alias bi='beet import'
alias bl='beet ls'

# Programming
alias exercism='~/projects/exercism/exercism'

# machinectl
alias mclist='machinectl list'
alias mcstart='machinectl start'
alias mcstop='machinectl stop'
alias mcclone='machinectl clone'
alias mcreboot='machinectl reboot'
alias mclogin='machinectl login'

# dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/projects/.dotfiles/ --work-tree=$HOME/'
alias dfs='dotfiles status'
alias dfls='dotfiles ls-tree --full-tree -r HEAD'
alias dfa='dotfiles add'
alias dfr='dotfiles rm -r --cached'
alias dfss='dotfiles status -s'
alias dfp='dotfiles push'
alias dfca='dotfiles commit -a'

# system things
alias r='/usr/share/nvim/runtime/macros/less.sh'
alias e='$EDITOR'
alias ytc='rm ~/.config/mps-youtube/cache_py_* ; rm -rf ~/.cache/youtube-dl'
